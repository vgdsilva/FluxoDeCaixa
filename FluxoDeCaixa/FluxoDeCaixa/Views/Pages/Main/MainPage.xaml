<?xml version="1.0" encoding="utf-8" ?>
<base:BasePages
    x:Class="FluxoDeCaixa.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:FluxoDeCaixa.Views.Pages"
    xmlns:controls="clr-namespace:FluxoDeCaixa.Controls"
    xmlns:fonts="clr-namespace:FluxoDeCaixa.Core.Utilities.Classes"
    xmlns:vm="clr-namespace:FluxoDeCaixa.ViewModels"
    x:DataType="vm:MainViewModel"
    BackgroundColor="#1E201C"
    Shell.BackgroundColor="#1E201C"
    Shell.NavBarIsVisible="False">

    <ContentPage.Content>
        <Grid BackgroundColor="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout Padding="16" BackgroundColor="#1E201C">
                <Label
                    FontSize="16"
                    Text="Welcome Back,"
                    TextColor="#A3A3A3" />
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Vinicius Gasparello da Silva"
                    TextColor="White" />
            </StackLayout>

            <controls:WidgetContainerView
                Grid.Row="1"
                Padding="24"
                Spacing="16"
                Widgets="{Binding Widgets}" />
        </Grid>
    </ContentPage.Content>
</base:BasePages>
