<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:classes="clr-namespace:FluxoDeCaixa.Mobile.Core.Utils.Classes"
             x:Class="FluxoDeCaixa.Mobile.Controls.DatePicker">

    <Border Stroke="#BCBEBF"
            StrokeShape="RoundRectangle 8,8,8,8"
            Padding="10,8"
            Margin="0">
        <HorizontalStackLayout x:Name="pickerContent" Spacing="8">
            
            <Label x:Name="dateLabel"
                   Text="Agosto de 2023" 
                   TextColor="Black"
                   FontSize="14"
                   FontFamily="Quicksand700Font"
                   VerticalOptions="Center" />

            <Label Text="{Static classes:FAIcons.FAChevronDown}" 
               TextColor="Black"
               FontSize="14"
               FontFamily="FontAwesomeSolid" 
               VerticalOptions="Center"/>

        </HorizontalStackLayout>
    </Border>
</ContentView>
