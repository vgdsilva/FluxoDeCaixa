<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FluxoDeCaixa.Mobile.Views.Pages.Home.HomePage"
             xmlns:controls="clr-namespace:FluxoDeCaixa.Mobile.Controls"
             Title="Fluxo de caixa"
             x:Name="thisPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Padding="0"
             BackgroundColor="#F0F1F5">

    <ContentPage.Content>
        <ScrollView Padding="20">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                  RowSpacing="16">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Grid.Column="0"
                           Grid.Row="0"
                           HorizontalOptions="Start"
                           Source="icon_logo.png"  />

                    <HorizontalStackLayout Grid.Column="1"
                                           HorizontalOptions="End"
                                           Spacing="16">
                        <ImageButton BackgroundColor="Transparent"
                                     HorizontalOptions="End"
                                     Source="icon_search.png"
                                     MaximumHeightRequest="24"
                                     MaximumWidthRequest="24">
                        </ImageButton>

                        <ImageButton BackgroundColor="Transparent"
                                     HorizontalOptions="End"
                                     MaximumHeightRequest="28"
                                     MaximumWidthRequest="28"
                                     Source="icon_notificacoes.png">
                        </ImageButton>
                    </HorizontalStackLayout>
                </Grid>
                <Border Grid.Row="1" 
                        HeightRequest="150"
                        StrokeShape="Rectangle 6">
                    
                </Border>
                <Grid Grid.Row="2"
                      ColumnDefinitions="*,*"
                      Padding="0,16">
                    <Label Grid.Column="0"
                           HorizontalOptions="Start"
                           Text="Mês selecionado:"
                           FontSize="16"/>

                    <controls:DatePickerLabel Grid.Column="1"
                                              HorizontalOptions="End"
                                              DateFormat="MMMM - yyyy"/>
                </Grid>
                <Grid Grid.Row="3"
                      ColumnDefinitions="*,*"
                      ColumnSpacing="16"
                      Padding="0,16">
                    <Button Grid.Column="0"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="#00875F"
                            TextColor="White"
                            Text="Nova catetoria"
                            FontSize="14"
                            FontAttributes="Bold" />

                    <Button Grid.Column="1"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="#00875F"
                            TextColor="White"
                            Text="Nova transação"
                            FontSize="14"
                            FontAttributes="Bold"/>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>