<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FluxoDeCaixa.Mobile.ViewModels.Categoria"
             x:Class="FluxoDeCaixa.Mobile.Views.Pages.Categoria.CategoriaPage"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:CategoriaViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto">

            <Grid RowDefinitions="Auto" 
                  Padding="24">
                <Entry Placeholder="Descrição"
                       PlaceholderColor="Black"
                       Text="{Binding Model.Descricao, Mode=TwoWay}" />
            </Grid>


            <VerticalStackLayout Grid.Row="1"
                                 Padding="24">
                <Button Text="Criar categoria"
                        Command="{Binding SaveCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>