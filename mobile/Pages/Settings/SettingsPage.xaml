<?xml version="1.0" encoding="utf-8" ?>
<base:BasePages xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:base="clr-namespace:FluxoDeCaixa.MAUI.Pages.Base"
                xmlns:local="clr-namespace:FluxoDeCaixa.MAUI.Pages.Settings"
                xmlns:componentes="clr-namespace:FluxoDeCaixa.MAUI.Componentes"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                x:Class="FluxoDeCaixa.MAUI.Pages.Settings.SettingsPage"
                Title="Configurações">

    <base:BasePages.BindingContext>
        <local:SettingsViewModel />
    </base:BasePages.BindingContext>

    <Grid>
        <componentes:TabView Margin="0,0,0,0"
                             SwipeEnabled="True">
            <componentes:TabViewItem HeaderText="Geral">
            </componentes:TabViewItem>

            <componentes:TabViewItem HeaderText="Categorias">
                <componentes:TabViewItem.Content>
                    <Grid RowDefinitions="Auto,*" Padding="24">
                        <componentes:ButtonForm Text="Adicionar Categoria"
                                                Command="{Binding AddCategoryCommand}"/>
                    </Grid>
                </componentes:TabViewItem.Content>
            </componentes:TabViewItem>
        </componentes:TabView>
    </Grid>
</base:BasePages>