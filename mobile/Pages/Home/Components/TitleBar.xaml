<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:FluxoDeCaixa.MAUI.Componentes"
             x:Class="FluxoDeCaixa.MAUI.Pages.Home.Components.TitleBar"
             BackgroundColor="Black">
    
    <Grid ColumnDefinitions="Auto,Auto"
          Padding="24">
        
        <Image Source="icon_logo.png" 
               Grid.Column="0"
               HeightRequest="25"
               Aspect="AspectFit"
               HorizontalOptions="Start"/>
        
        <components:ButtonForm Grid.Column="1"
                               Text="Adicionar transação"
                               BackgroundColor="#55B02E"
                               BackgroundColorCharger="#55B02E"
                               PressedBackgroundColor="#00B37E"
                               TextColor="White"
                               HorizontalOptions="End"/>
    </Grid>
    
</ContentView>