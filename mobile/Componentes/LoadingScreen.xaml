<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui"
              x:Class="FluxoDeCaixa.MAUI.Componentes.LoadingScreen">

    <rg:PopupPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand"
                     Spacing="16">

            <ActivityIndicator IsRunning="true"
                               HorizontalOptions="CenterAndExpand"
                               VerticalOptions="CenterAndExpand"
                               Color="{StaticResource Primary500}" />

            <Label x:Name="MessageLabel"
                   TextColor="White"
                   IsVisible="False"
                   FontFamily="Quicksand700Font" />

        </StackLayout>
    </rg:PopupPage.Content>
</rg:PopupPage>