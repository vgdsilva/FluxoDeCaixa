<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="FluxoDeCaixa.Mobile.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:FluxoDeCaixa.Mobile.Core.Domain.Utils.Converters"
    xmlns:local="clr-namespace:FluxoDeCaixa.Mobile">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:ReverseBoolValueConverter x:Key="ReverseBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
