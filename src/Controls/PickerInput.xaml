<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="FluxoDeCaixa.Mobile.Controls.PickerInput"
      x:Name="gridInput"
      RowDefinitions="Auto,Auto,Auto"
      RowSpacing="8">

    <Label Grid.Row="0" FontFamily="QuicksandBold" FontSize="14" Text="{Binding Source={Reference gridInput}, Path=LabelText}" TextColor="#10002E" />

    <Frame BorderColor="#D5D4DC" HasShadow="False" Grid.Row="1" BackgroundColor="{StaticResource White}" Padding="12,4" Margin="0" CornerRadius="8">
        <Picker x:Name="picker" Title="{Binding Source={Reference gridInput}, Path=PlaceholderText}" TitleColor="#8B849B" FontSize="16" TextColor="#10002E" Margin="0"/>
    </Frame>
</Grid>
